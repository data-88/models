---
import { Image } from "@astrojs/image/components";
import config from "@config/config.json";
import { humanize,slugify } from "@lib/utils/textConverter";
import { BiCategoryAlt } from "react-icons/bi/index.js";
const { className, nonbinaries, fluid } = Astro.props;
---

<div class={`row gy-5 gx-4 ${className} ${nonbinaries.name == 1 ? "justify-center" : ""} `}>
  {
    nonbinaries.map((nonbinary: any, i: number) => (
      <div class={i === 0 && fluid != false ? "col-12" : "col-12 sm:col-6"}>
        {nonbinary.data.image && (
          <a href={`/${nonbinary.slug}`} class="rounded-lg block hover:text-primary overflow-hidden group">
            <Image
              class="group-hover:scale-[1.03] transition duration-300 w-full"
              src={nonbinary.data.image}
              alt={nonbinary.data.name}
              width={i === 0 ? 100 : 400}
              height={i === 0 ? 200 : 500}
            />
          </a>
        )}
        <ul class="mt-6 mb-4 flex flex-wrap items-center text-text">
          <li class="mr-5 flex items-center flex-wrap">
            <BiCategoryAlt className="mr-1 h-[18px] w-[18px] text-gray-600" />
            <>
              <ul>
                <h3 class="h4 mt-8 mb-3">
                  <a href={`/${nonbinary.slug}`} class="block hover:text-primary transition duration-200">
                    {nonbinary.data.name}
                  </a>
                </h3>
              </ul>
            </>
          </li>
        </ul>
      </div>
    ))
  }
</div>
