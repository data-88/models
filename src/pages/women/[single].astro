---
import { Image } from "@astrojs/image/components";
import ModelSingle from "@layouts/ModelSingle.astro";
import Base from "@layouts/Base.astro";
import { getSingleWoman } from "@lib/contentParser.astro";
import Women from "@layouts/Women.astro";
import { humanize,slugify } from "@lib/utils/textConverter";
import { BiCategoryAlt } from "react-icons/bi/index.js";

export async function getStaticPaths() {
  const women = await getAllWomen("women");
  const paths = women.map((women) => ({
    params: {
      single: women.slug,
    },
    props: { women },
  }));
  return paths;
}

const { women } = Astro.props;
const { name, meta_title, image } = women.data;

---

<Base
  name={name}
  meta_title={meta_title}
  image={image}
>
  <Women woman={women} />
            <h3 class="h5">
              <a href={`/${woman.slug}`} class="block hover:text-primary transition duration-300">
                {woman.data.name}
              </a>
            </h3>
          </div>
          ))}
        </div>
      </div>
    </section>
  )}
</Base>
