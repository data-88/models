---
import { Image } from "@astrojs/image/components";
import Kid from "@layouts/Kid.astro";
import Base from "@layouts/Base.astro";
import { getSingleKid } from "@lib/contentParser.astro";
import { humanize,slugify } from "@lib/utils/textConverter";
import { BiCategoryAlt } from "react-icons/bi/index.js";

export async function getStaticPaths() {
  const women = await getSingleKid("women");
  const paths = women.map((Kid) => ({
    params: {
      single: kid.slug,
    },
    props: { kid },
  }));
  return paths;
}

const { woman } = Astro.props;
const { name, meta_title, image } = woman.data;

---

<Base
  name={name}
  meta_title={meta_title}
  image={image}
>
  <Woman woman={woman} />
            <h3 class="h5">
              <a href={`/${woman.slug}`} class="block hover:text-primary transition duration-300">
                {woman.data.name}
              </a>
            </h3>
          </div>
          ))}
        </div>
      </div>
    </section>
  )}
</Base>
